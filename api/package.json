		"vitest": "^0.30.1"
	},
	"dependencies": {
		"@apollo/datasource-rest": "^5.1.1",
		"@apollo/server": "^4.7.1",
		"concurrently": "^8.0.1",
		"dotenv": "^16.0.3",
		"graphql": "^16.6.0",
		"nodemon": "^2.0.22",
		"supertest": "^6.3.3"
	}
